totvs-modal-header
	span.initialwrap.title.link {{ 'l-reason-for-card-lock' | i18n }}
totvs-modal-body
	totvs-list-item-header
		div.col-md-12
			div.form-group.col-md-12(style="padding-left: 0px;")
				label(for="justification")
					{{'l-select-reason'| i18n}}:

				.input-group.col-md-12(ng-class="{'has-error': controller.invalidJustificative}")
					select.form-control(name="justification", id="justification", ng-options="just.des_justif for just in controller.listJustification", required="required", ng-model="controller.justification")
						option(value="")
							{{'l-select-reason'| i18n}}
totvs-modal-footer
	button.btn.btn-primary(data-ng-click="controller.lock();") {{'l-lock' | i18n}}
	button.btn.btn-default(ng-click="controller.close()") {{ 'l-close' | i18n }}
