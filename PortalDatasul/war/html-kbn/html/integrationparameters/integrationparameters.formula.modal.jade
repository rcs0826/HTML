totvs-modal-header {{ 'l-edit-directory' | i18n}}
totvs-modal-body
    totvs-page-form(id="formulaForm",role="form")
        field.col-md-12.com-sm-12(type="input", ng-model="controller.diretorioFormula", maxlength="100", label="{{ 'l-directory-formulas' | i18n}}:")
totvs-modal-footer
    button.btn.btn-default(data-ng-click="controller.cancel();")
        {{ 'l-cancel' | i18n}}
    button.btn.btn-primary(data-ng-click="controller.save();")
        {{ 'l-save' | i18n}}