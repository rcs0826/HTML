totvs-modal-header {{ 'l-advanced-search' | i18n}}
totvs-modal-body
    totvs-page-form(id="flowForm",role="form")
        field.col-md-12(type="input", maxlength="60", ng-model="controller.values.refer", placeholder="{{ 'l-reference' | i18n}}", required,label="{{ 'l-reference' | i18n}}")
        totvs-row
            totvs-field(totvs-checkbox="", ng-model="controller.values.mostraInativo", ng-if="controller.mapping.idi_status === 3 || controller.mapping.idi_status === 4", label="{{ 'l-view-inactive-items' | i18n }}", required, t-bsswitch)
totvs-modal-footer
    button.btn.btn-default(data-ng-click="controller.cancel();")
        {{ 'l-cancel' | i18n}}
    button.btn.btn-primary(data-ng-click="controller.search();")
        {{ 'l-search' | i18n}}