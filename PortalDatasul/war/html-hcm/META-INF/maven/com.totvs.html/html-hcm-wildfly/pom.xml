<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.totvs.html</groupId>
    <artifactId>html-hcm</artifactId>   
    <version>12.1.33-NFRW-SNAPSHOT</version>
  </parent>
  <version>12.1.33-NFRW-SNAPSHOT</version>
  <artifactId>html-hcm-wildfly</artifactId>  
  <packaging>war</packaging>
<repositories>
        <repository>
        <id>repository-central</id>
            <url>http://porto.jv01.local:8081/repository/maven-public/</url>
		<!--url>http://localhost:8080/repository/internal/</url-->
        <releases>
          <enabled>true</enabled>
        </releases>
        <snapshots>
          <enabled>true</enabled>
        </snapshots>
        </repository>
      </repositories>
  <dependencies>
	<dependency>
		<groupId>com.totvs.framework</groupId>
		<artifactId>totvs-fwk-sso</artifactId>
		<version>12.1.33-NFRW-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>com.totvs.framework</groupId>
		<artifactId>totvs-fwk-properties</artifactId>
		<version>12.1.33-NFRW-SNAPSHOT</version>
	</dependency>
	<dependency>
		<groupId>com.totvs.framework</groupId>
		<artifactId>totvs-fwk-progress-connector</artifactId>
		<version>12.1.33-NFRW-SNAPSHOT</version>
	</dependency>

  </dependencies>
  <build>
    <finalName>html-hcm</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
			<failOnMissingWebXml>false</failOnMissingWebXml>
			<webResources>
			  <resource>
				<directory>../html-sources/dist</directory>
			  </resource>
			</webResources>
        </configuration>
      </plugin>
    </plugins>       
  </build>
</project>
